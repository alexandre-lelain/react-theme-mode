{
  "name": "react-theme-mode",
  "version": "1.0.0",
  "description": "ThemeMode state management made easier.",
  "repository": {
    "type": "git",
    "url": "git@github.com:alexandre-lelain/react-theme-mode.git"
  },
  "author": "Alexandre Le Lain <lelain.alexandre@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "theme",
    "hook"
  ],
  "files": [
    "build/**/*"
  ],
  "main": "./build/cjs/index.js",
  "module": "./build/index.js",
  "types": "build/index.d.ts",
  "typings": "build/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf build && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -m es6 --outDir build",
    "build:cjs": "tsc -m commonjs --outDir build/cjs",
    "prettier": "prettier --write src",
    "lint": "eslint --cache src/**/*.{ts,tsx}"
  },
  "dependencies": {
    "js-extra": "^1.5.2",
    "prop-types": "^15.7.2",
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.48",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern src"
    }
  }
}
